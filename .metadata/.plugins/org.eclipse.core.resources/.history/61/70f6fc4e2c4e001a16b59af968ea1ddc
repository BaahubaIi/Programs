package Assignments;

import java.util.Scanner;

public class Kaprekar {

	public static void main(String[] args) {
		int sum=0;
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter a number");
		int n=sc.nextInt();
		int sq=n*n;
		while(n!=0)
		{
			n=n%10;
			sum=sum+n;
			n=n/10;
		}
		System.out.println(sum);

	}

}
